<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cz.cuni.mff.d3s.jdeeco.demo</groupId>
	<artifactId>cz.cuni.mff.d3s.jdeeco.demo</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>src</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<id>cloud</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<classifier>cloud</classifier>
							<includes>
								<include>**/cloud/*</include>
							</includes>
						</configuration>
					</execution>
					<execution>
						<id>convoy</id>
						<goals>
							<goal>jar</goal>
						</goals>
						<phase>package</phase>
						<configuration>
							<classifier>convoy</classifier>
							<includes>
								<include>**/convoy/*</include>
							</includes>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>cz.cuni.mff.d3s.jdeeco.core</groupId>
			<artifactId>cz.cuni.mff.d3s.jdeeco.core</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>cz.cuni.mff.d3s.zip</groupId>
			<artifactId>apache-river</artifactId>
			<version>2.2.0</version>
			<type>zip</type>
		</dependency>
		<dependency>
			<groupId>cz.cuni.mff.d3s.zip</groupId>
			<artifactId>gov.nasa.jpf</artifactId>
			<version>6.0</version>
			<type>zip</type>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>d3s-releases</id>
			<url>https://github.com/d3scomp/mvn-repo/raw/master/releases/</url>
		</repository>
		<repository>
			<id>d3s-snapshots</id>
			<url>https://github.com/d3scomp/mvn-repo/raw/master/snapshots/</url>
		</repository>
	</repositories>
</project>